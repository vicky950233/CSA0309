#include <stdio.h>
#define SIZE 50
int stack[SIZE], top=-1;

void push(int val){
    if(top==SIZE-1) printf("Overflow\n");
    else stack[++top]=val;
}
void pop(){
    if(top==-1) printf("Underflow\n");
    else printf("Popped: %d\n",stack[top--]);
}
void peek(){
    if(top==-1) printf("Stack Empty\n");
    else printf("Top: %d\n",stack[top]);
}
void display(){
    for(int i=top;i>=0;i--) printf("%d ",stack[i]);
    printf("\n");
}

int main(){
    int ch,val;
    do{
        printf("\n1.Push 2.Pop 3.Peek 4.Display 5.Exit\n");
        scanf("%d",&ch);
        if(ch==1){ printf("Value: "); scanf("%d",&val); push(val); }
        else if(ch==2) pop();
        else if(ch==3) peek();
        else if(ch==4) display();
    }while(ch!=5);
    return 0;
}
