#include <stdio.h>
#include <ctype.h>
#define SIZE 50
char stack[SIZE]; int top=-1;

void push(char c){ stack[++top]=c; }
char pop(){ return stack[top--]; }
int prec(char c){
    if(c=='^') return 3;
    if(c=='*'||c=='/') return 2;
    if(c=='+'||c=='-') return 1;
    return 0;
}

int main(){
    char exp[50], res[50]; int i,k=0;
    printf("Enter Infix: ");
    scanf("%s",exp);
    for(i=0;exp[i];i++){
        char c=exp[i];
        if(isalnum(c)) res[k++]=c;
        else if(c=='(') push(c);
        else if(c==')'){
            while(top!=-1 && stack[top]!='(') res[k++]=pop();
            pop();
        } else {
            while(top!=-1 && prec(stack[top])>=prec(c)) res[k++]=pop();
            push(c);
        }
    }
    while(top!=-1) res[k++]=pop();
    res[k]='\0';
    printf("Postfix: %s",res);
    return 0;
}
